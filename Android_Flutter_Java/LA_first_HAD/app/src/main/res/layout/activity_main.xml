<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="154dp"
            android:layout_height="848dp"
            android:background="#3F51B5"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-6dp" />

        <TextView
            android:id="@+id/checkoutView"
            android:layout_width="141dp"
            android:layout_height="46dp"
            android:text="CHECKOUT"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailAddr"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:text="Email Address"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.308" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="32dp"
            android:text="Checkbox1"
            app:layout_constraintBottom_toTopOf="@+id/checkBox4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/enteredPass"
            app:layout_constraintVertical_bias="1.0"
            app:layout_marginBaseline="32dp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:text="CheckBox2"
            app:layout_constraintBottom_toTopOf="@+id/loginBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_marginBaseline="25dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginBottom="28dp"
            android:text="CheckBox3"
            app:layout_constraintBottom_toTopOf="@+id/checkBox3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_marginBaseline="25dp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:text="LOGIN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/enteredPass"
            app:layout_constraintVertical_bias="0.677" />

        <EditText
            android:id="@+id/enteredPass"
            android:layout_width="227dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.742"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/emailAddr"
            app:layout_constraintVertical_bias="0.025" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="99dp"
            android:layout_height="91dp"
            app:layout_constraintBottom_toTopOf="@+id/emailAddr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img" />

</androidx.constraintlayout.widget.ConstraintLayout>
